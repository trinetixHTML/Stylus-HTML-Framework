

br()
	-webkit-border-radius: arguments
	-moz-border-radius: arguments
	border-radius: arguments

bs()
	-moz-box-shadow: arguments
	-webkit-box-shadow: arguments
	box-shadow: arguments

lg($val1, $val2)
	background-color: $val1
	background-image: -moz-linear-gradient(top, $val1 0%, $val2 100%)
	background-image: -o-linear-gradient(top, $val1 0%, $val2 100%)
	background-image: -webkit-linear-gradient(top, $val1 0%, $val2 100%)
	background-image: linear-gradient(top, $val1 0%, $val2 100%)

box()
	box-sizing: border-box
	-moz-box-sizing: border-box
	-webkit-box-sizing: border-box

.xyu
	box-sizing: border-box
	border-radius: 5px;
	box-shadow: 0 0 3px black;
	background: #000
	background-image: linear-gradient(top, #000 0%, #FFF 100%)
	font-size: 14px
	opacity: 0.50;
	background-color: rgba(255,255,288,0.78)



